<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/annualSavingsView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="uk.co.irokottaki.moneycontrol.AnnualSavingsActivity"
    android:background="@drawable/backgroundimg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="-32dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/ImageView" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/annualSavingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/leftYearButton"
        android:src="@drawable/arrow_left_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0000"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/rigthYearButton"
        android:src="@drawable/arrow_right_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/annualSavingsLayout"
        android:layout_alignEnd="@+id/annualSavingsLayout"
        android:background="#0000"
        android:layout_alignBottom="@+id/yearlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Year:"
        android:id="@+id/yearlabelSavings"
        android:layout_alignBottom="@+id/leftYearButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
